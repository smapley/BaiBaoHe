<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/sousuo_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/textview_circle2"
            android:padding="5dp">

            <TextView
                android:id="@+id/main2_nm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:text="asdf"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/main2_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/yiduihuan"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/main2_yinke"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:maxLines="1"
                android:minWidth="90dp"
                android:padding="5dp"
                android:text="@string/yinke"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@+id/main2_nm"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/main2_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_below="@+id/main2_nm"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/main2_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main2_des"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/main2_pic"
                android:ellipsize="end"
                android:minHeight="30dp"
                android:minLines="2"
                android:text="asdf\nasdf"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/main2_des"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_below="@+id/main2_nm"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/main2_pic"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="6"
                android:minHeight="80dp"
                android:text="asdfas\nasdf\nasdf\nasdf\nsadf\nasdf"
                android:textColor="@color/chengse"
                android:textSize="12sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>