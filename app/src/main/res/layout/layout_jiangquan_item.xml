<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="10dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/jiangquan_bianhaos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/bianhao" />

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/jiangquan_bianhao"
            android:textColor="@color/chengse"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/jiangquan_bianhaos"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/jiangquan_fuzhi"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:textSize="15sp"
            android:background="@drawable/fuzhi"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_height="wrap_content"
            android:text="@string/fuzhi" />


    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
</LinearLayout>