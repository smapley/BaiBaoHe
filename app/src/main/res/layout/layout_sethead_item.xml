<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/set_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_tag"
        android:layout_margin="10dp"
        android:background="@drawable/textview_circle2"
        android:enabled="false"
        android:minHeight="50dp"
        android:padding="10dp"
        android:textColor="@color/chengse"
        android:textCursorDrawable="@color/chengse"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <LinearLayout
        android:id="@+id/jilv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/textview_circle2"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_1"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/set_min"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/chengse"
                android:textCursorDrawable="@color/chengse"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_2"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/set_max"
                android:layout_width="60dp"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/chengse"
                android:textCursorDrawable="@color/chengse"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_5"
                android:visibility="gone"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:visibility="gone"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_0"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/set_min2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/chengse"
                android:textCursorDrawable="@color/chengse"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_4"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/set_max2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="number"
                android:textColor="@color/chengse"
                android:textCursorDrawable="@color/chengse"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_5"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/jilv"
        android:background="@color/gray" />
</LinearLayout>