<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/textview_circle2"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/duijiang_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="asdf"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/duijiang_nm"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/duijiang_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/duijiang_nm"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/duijiang_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/duijiang_nm"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/duijiang_pic"
            android:lines="1"
            android:text="asdf"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/duijiang_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/duijiang_goods"
            android:layout_below="@+id/duijiang_goods"
            android:layout_marginTop="15dp"
            android:text="@string/yonghu2"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/duijiang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/duijiang_names"
            android:layout_toLeftOf="@+id/duijiang_zhuangtai"
            android:layout_toRightOf="@+id/duijiang_names"
            android:text="asdf"
            android:textColor="@color/chengse" />

        <TextView
            android:id="@+id/duijiang_quans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/duijiang_goods"
            android:layout_below="@+id/duijiang_names"
            android:layout_marginTop="5dp"
            android:text="@string/bianhao"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/duijiang_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/duijiang_quans"
            android:layout_toRightOf="@+id/duijiang_quans"
            android:text="asdf"
            android:textColor="@color/chengse" />

        <TextView
            android:id="@+id/duijiang_laizis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/duijiang_goods"
            android:layout_below="@+id/duijiang_quans"
            android:layout_marginTop="5dp"
            android:text="@string/duijiang_1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/duijiang_laizi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/duijiang_laizis"
            android:layout_toRightOf="@+id/duijiang_laizis"
            android:text="asdf"
            android:textColor="@color/chengse" />

        <TextView
            android:id="@+id/duijiang_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/duijiang_goods"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:padding="7dp"
            android:text="asdfasdfasdfs"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>