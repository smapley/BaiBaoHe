<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toubu">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/textview_circle4"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/duijiang_duijiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:background="@color/chengse"
                android:text="@string/duijiang_tag"
                android:textColor="@color/white2"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/duijiang_shoukuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="2dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="@string/shoukuan"
                android:textColor="@color/chengse"
                android:textSize="16sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/duijiang_jiangquan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/tianjia" />
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toubu2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/textview_circle"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/duijiang_search_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/main_search"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/search_text"
                android:inputType="number"
                android:paddingLeft="20dp"
                android:textCursorDrawable="@color/chengse"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/duijiang_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/sousuo" />
        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />


    <TextView
        android:id="@+id/duijiang_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center_horizontal"
        android:text="@string/duijiangtip" />

    <ListView
        android:id="@+id/duijiang_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_circle2"
        android:layout_margin="5dp">

    </ListView>
</LinearLayout>