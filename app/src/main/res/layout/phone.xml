<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/toubu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="@dimen/tag_textsize"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="@string/phone_tag" />

        <ImageView
            android:id="@+id/phone_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/tianjia" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/phone_item2"
        android:textColor="@color/chengse"
        android:gravity="center"
        android:padding="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray" />

    <com.smapley.baibaohe.listview.SwipeMenuListView
        android:id="@+id/phone_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/textview_circle2"
        android:layout_margin="5dp"/>
</LinearLayout>