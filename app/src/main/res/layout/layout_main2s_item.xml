<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/textview_circle2"
        android:padding="5dp">

        <TextView
            android:id="@+id/main2_nm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="asdf"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/main2_yinke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:lines="1"
            android:maxLines="1"
            android:padding="5dp"
            android:text="@string/tongyi"
            android:background="@drawable/textview_circle2s"
            android:textColor="@color/chengse"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/main2_nm"
            android:background="@color/gray" />

        <ImageView
            android:id="@+id/main2_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/main2_nm"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />


        <TextView
            android:id="@+id/main2_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main2_nm"
            android:layout_marginRight="10dp"
            android:minHeight="90dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/main2_pic"
            android:maxLines="6"
            android:text="asdf"
            android:ellipsize="end"
            android:textColor="@color/chengse"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main2_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main2_des"
            android:minHeight="30dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/main2_pic"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="asdf\nasdf"
            android:textSize="12sp"
            android:textColor="@color/black" />


    </RelativeLayout>

</RelativeLayout>