<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/textview_circle2">


        <ImageView
            android:id="@+id/set_item_pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY" />


        <EditText
            android:id="@+id/set_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/set_item_pic"
            android:background="@null"
            android:enabled="false"
            android:singleLine="true"
            android:text="kjhlkjhlkjhlkjhlkjhlkjhlkjhlkjhlkjhlkjhlkjh"
            android:minWidth="100dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/chengse"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/set_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/set_item_name"
            android:layout_below="@+id/set_item_name"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_item1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_item2"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/set_item3"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/set_item_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/set_item_text"
            android:layout_below="@+id/set_item_text"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/set_item_jilv"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="right"
                    android:inputType="number"
                    android:padding="5dp"
                    android:textColor="@color/chengse"
                    android:textCursorDrawable="@color/chengse"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/chengse" />
            </LinearLayout>


            <EditText
                android:id="@+id/set_item_shuliang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:inputType="number"
                android:minWidth="100dp"
                android:padding="5dp"
                android:textColor="@color/chengse"
                android:textCursorDrawable="@color/chengse"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/set_item_yz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:padding="5dp"
                android:text="123"
                android:textColor="@color/chengse"
                android:textSize="15sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/set_item_delect"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:visibility="gone"
            android:src="@drawable/delect" />
    </RelativeLayout>


</RelativeLayout>